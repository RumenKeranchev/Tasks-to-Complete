@model  WebBlog.Models.Blogs.BlogViewModel 

@{
    ViewBag.Title = "All Blog Items";
    Layout = "_Layout";
}

<h2 style="padding-bottom: 100px; text-align: center">All Blog Items</h2>

@foreach ( var entry in this.Model.BlogEntries )
{
    <div style="display: table-cell; padding-right: 40px; text-align: center">
        <h3>@entry.Title</h3>
        <div>@entry.Content</div>
        <div>@entry.CreationDate</div>
    </div>
}